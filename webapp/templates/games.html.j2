{% extends "base.html.j2" %}

{% block content %}
    <div class="gamepage">
        <table class="table table-striped table-hover">
            {% for game in games%}
            <tr>
                <td><a href="/game/{{ game.ID }}"><img src="/static/img{{ game.ImageIcon }}" width="64" style="vertical-align: top;">{{ game.Title }}</td>
                <td>
                    <div style="float: right;">
                    {% for user in game.Players %} 
                        <a href="/user/{{user.Name}}"><img src="/static/img/UserPic/{{user.UserPic}}.png" width=64></a> 
                    {% endfor %}
                    </div>
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}