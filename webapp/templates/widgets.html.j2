{% macro widget_list_gamebyuser(list) -%}
<div class="scrollable-table table-260 border rounded">
    <table class="table table-striped table-hover">
        <colgroup>
            <col span="1">
            <col span="1" style="width: 100px; text-align: right;">
            </colgroup>
        {% for game in list%}
        <tr>
            <td>{% if game.ID is not none %}<a href="/game/{{ game.ID }}">{% endif %}{{ game.Title }}{% if game.ID is not none %}</a>{% endif %}</td>
            <td>
                <div style="float: right;">
                {% for user in game.Users %} 
                    <a href="/user/{{user}}"><img src="/static/img/UserPic/{{user}}.png" width=24></a> 
                {% endfor %}
                </div>
            </td>
        </tr>
        {% endfor %}
    </table>
</div>
{%- endmacro %}

{% macro widget_pointsgraph(pointsgraph) -%}
<div class="chart-container border rounded" style="position: relative; height:260px; width:100%;">
    <canvas id="myChart"></canvas>
</div>
<script>
    const ctx = document.getElementById('myChart');
    new Chart(ctx, {
        type: 'scatter',
        data: {
            datasets: [{
                type: 'bar',
                label: 'Daily Points',
                data: [{{ pointsgraph.daily }}]
            }, {
                type: 'line',
                label: 'Daily Cumulative',
                data: [{{ pointsgraph.cumulative }}],
            }],
            labels: ["{{ pointsgraph.day }}"]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
            y: {
                beginAtZero: true
            }
            }
        }
    });
</script>
{%- endmacro %}